<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg2"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btnFeedbackSkip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:background="@android:color/transparent"
        android:text="@string/skip_button_feedback"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPicture"
        android:layout_marginTop="30dp"
        android:text="@string/text_picture_snap"
        android:textColor="@android:color/white"
        android:layout_below="@id/btnFeedbackSkip"
        android:layout_centerHorizontal="true"
        android:textSize="21sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardProjectDescription"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@color/primary2">

        <ImageView
            android:id="@+id/imgFeedbackPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/camera" />
</RelativeLayout>